<html>
   <head>
      <title>CreateHTX | Resources for Entreprenuers in Houston</title>
      <meta>
      </meta>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <link rel="stylesheet" href="styles/index.css">
      <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet">
      <script src="delete.js" type="text/javascript"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/typeit/5.2.0/typeit.min.js"></script>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
      <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
   </head>
   <body>
      <header class="container-fluid header-container">
         <div class="row">
            <div class="col-md-12">
               <div class="row">
                  <div class="col-md-6 left-column header-left">
                     <p class="header-title"><strong>CreateHTX</strong></p>
                     <p>The premier resource hub for the</p>
                     <p id="typeit"></p>
                     <p>in HTX.</p>
                  </div>
                  <div class="col-md-6 p-0 background-img-0">
                     <div class="navigation d-flex justify-content-around">
                        <ul class="nav_menu">
                           <li class="li-item"><a href="/directory">home</a></li>
                           <li class="li-item"><a href="#resources">resources</a></li>
                           <li class="li-item"><a href="/events">events</a></li>
                        </ul>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </header>
      <section>
         <div class="container-fluid">
            <div class="row p-0">
              <div class="col-md-6 p-0">
                <div class="satyr">
                  <section class="bg top"> <p class="scroll-pic-text"> Resources </p></section>
                  <section class="bg bottom"><p class="scroll-pic-text"> Events </p></section>
                </div>
               </div>
              <div class="col-md-6 p-0">
                <div class="bg"> <div><p class="resource-text">Find people and places to help you create your startup business. </p></div></div>
                <div class="bg-other"><p class="resource-text"> Find events to help you create your startup business. </p></div>
             </div>

          </div>
         </div>
      </section>
      <div class='hiding-form text-align' id="hide-form">
         <a href="#" onclick="closeForm()" class="btn-close"> &times;</a>
         <form method="post" action="/api/resources">
            <h5>Business Information</h5>
            <input name='businessName' type='text' placeholder='Business Name'></input><br>
            <input name='url' type='text' placeholder='URL'></input><br>
            <input name='description' type='text' placeholder='Description'></input><br>
            <br>
            <h5>Contact Information</h5>
            <input name='contactName' type='text' placeholder='Contact Name'></input><br>
            <input name='email' type='text' placeholder='Email Address'></input><br>
            <input name='phone' type='text' placeholder='Phone'></input><br>
            <input name='address' type='text' placeholder='Address'></input><br>
            <br>
            <h5>Market</h5>
            <input name='services' type='text' placeholder='Services (Separate with commas)'></input><br>
            <input name='market' type='text' placeholder='Market (Separate with commas)'></input><br>
            <br>
            <button type='submit'>Submit Form</button>
         </form>
      </div>
      <section class="container-fluid" id="resources">
         <div class="row">
            <div class="col-md-12 resource_div">
               <div class="form-submit">
                  <p onclick="openForm()">Submit Resource</p>
               </div>
               <div class="the-list">
                  <ul class="resource-list">
                     {{#resources}}
                     {{#isApproved}}
                     <li class="actual-resource-item" vendorName = "Coca Cola" businessName={{businessName}} onclick="displayInfo('{{_id}}')">
                        {{businessName}}
                        <br>
                     </li>
                     {{/isApproved}}
                     {{/resources}}
                  </ul>
               </div>
            </div>
         </div>
      </section>
      <section class="participants-logos">
         <div class="container-fluid">
            <div class="row">
               <div class="col-md-12 col-sm-8">
                  <h2 class="text-center mt-3">Partners</h2>
                  <div class="logo-container">
                     <ul class="logo-list d-flex justify-content-around">
                        <li><img src="./images/logos/orangeriverlogo.png" alt="station logo" class="part-logo-img"></li>
                        <li><img src="./images/logos/bauer.png" alt="orange river advisors logo" class="part-logo-img"></li>
                        <li><img src="./images/logos/station-logo.png" alt="station logo" class="part-logo-img"></li>
                        <li><img src="./images/logos/tmc-x.png" alt="station logo" class="part-logo-img"></li>
                        <li><img src="./images/logos/txrx-labs.png" alt="station logo" class="part-logo-img"></li>
                        <li><img src="./images/logos/the-cannon.png" alt="station logo" class="part-logo-img"></li>
                        <li><img src="./images/logos/red-labs.png" alt="station logo" class="part-logo-img"></li>
                        <li><img src="./images/logos/sketch-city.png" alt="station logo" class="part-logo-img"></li>
                     </ul>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <footer class="footer">
         <div class="container-fluid">
            <div class="row">
              <div class="col-md-6">
                <div class="connect">
                  <p>
                    <h2>Connect with us</h2>
                  </p>
                  <ul class="social-media">
                    <li><i class="fab fa-meetup"></i></li>
                    <li><i class="fab fa-facebook-f"></i></li>
                    <li><i class="fab fa-twitter"></i></li>
                    <li><i class="fab fa-medium-m"></i></li>
                    <li><i class="fab fa-slack-hash"></i></li>
                    <li><i class="far fa-envelope"></i></li>
                  </ul>
                </div>
              </div>
              <div class="col-md-6">
                  <div class="subscribe-section">
                    <p>
                      <h2>Keep in touch</h2>
                    </p>
                    <br>
                    <label>Name</label>
                    <input type="text" class="input-field"><br>
                    <label>Email</label>
                    <input type="email" class="input-field"><br><br>
                    <p><button class="subscribe-button"> Susbcribe </button></p>
                  </div>
               </div>
            </div>
         </div>
      </footer>
      <div id="myModal" class="modal" tabindex="-1" role="dialog">
         <div class="modal-dialog" role="document">
            <div class="modal-content modal-style">
              <div class="modal-header">
                  <h5 class="modal-title">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                  </button>
               </div>
               <div class="modal-body">
                  <p>Modal body text goes here.</p>
               </div>
            </div>
        </div>
      </div>
      </div>
   </body>
   <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
   <script src="submitForm.js" type="text/javascript"></script>
   <script>
      new TypeIt('#typeit', {
        strings: 'entreprenuers',
        speed: 70,
        autoStart: false,
        loop: true
      })
      .pause(1000)
      .delete()
      .type('creatives')
      .pause(1000)
      .delete()
      .type('hustlers')
      .pause(1000)
      .delete()
      .type('startups')
      .pause(1000);
   </script>
</html>
